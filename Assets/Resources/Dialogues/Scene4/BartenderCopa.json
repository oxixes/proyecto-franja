{
    "lines": [
        {
            "type": "text",
            "characterName": "Hombre de la barra",
            "text": "¿Qué te pongo, un zumito de piña?",
            "pause": true,
            "imageAssetId": null
        },
        {
            "type": "text",
            "characterName": "Juan",
            "text": "Una copa.",
            "pause": true,
            "imageAssetId": "Portraits/Boy"
        },
        {
            "type": "text",
            "characterName": "Hombre de la barra",
            "text": "No veas si estan espabilados los chavales.",
            "pause": true,
            "imageAssetId": null
        },
        {
            "type": "text",
            "characterName": "Hombre de la barra",
            "text": "Aquí tienes.",
            "pause": true,
            "imageAssetId": null
        },
        {
            "type": "text",
            "characterName": "Juan",
            "text": "Gracias.",
            "pause": true,
            "imageAssetId": "Portraits/Boy"
        },
        {
            "type": "text",
            "characterName": "Juan",
            "text": "<i>Debería probarla para ver si es buena mandanga.</i>",
            "pause": true,
            "imageAssetId": "Portraits/Boy"
        },
        {
            "type": "text",
            "characterName": "Juan",
            "text": "Esto es agua.",
            "pause": true,
            "imageAssetId": "Portraits/Boy"
        },
        {
            "type": "text",
            "characterName": "Hombre de la barra",
            "text": "Claro, no me has dicho de que quieres la copa.",
            "pause": true,
            "imageAssetId": null
        },
        {
            "type": "text",
            "characterName": "Juan",
            "text": "Ah, perdón, una copa de...",
            "pause": true,
            "imageAssetId": "Portraits/Boy"
        },
        {
            "type": "text",
            "characterName": "Juan",
            "text": "Alcohol.",
            "pause": true,
            "imageAssetId": "Portraits/Boy"
        },
        {
            "type": "text",
            "characterName": "Hombre de la barra",
            "text": "Jajaja, venga chaval que estas más verde que el césped del Bernabéu.",
            "pause": true,
            "imageAssetId": null
        },
        {
            "type": "text",
            "characterName": "Hombre de la barra",
            "text": "Habla con un borracho y que te la pida él. Como se ha hecho toda la vida.",
            "pause": true,
            "imageAssetId": null
        },
        {
            "type": "text",
            "characterName": "Hombre de la barra",
            "text": "Os hace falta una mili...",
            "pause": true,
            "imageAssetId": null
        },
        {
            "type": "text",
            "characterName": "Juan",
            "text": "<i>¿Mili? ¿Éder Militao, el defensa del Madrid? Ah, seguro que a él si le darían una copa.</i>",
            "pause": true,
            "imageAssetId": "Portraits/Boy"
        },
        {
            "type": "notification",
            "notificationId": "BartenderCopaDialogueFinished",
            "text": "BartenderCopaDialogueFinished"
        }
    ]
}